<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_rule"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_league"
            android:layout_height="wrap_content"
            android:text="Premier"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_place_and_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:text="Standford Bridge | Sep 17 at 20:00"
            android:textStyle="italic"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_league"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_home_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="River"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_place_and_date"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" />

        <View
            android:layout_width="50dp"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_place_and_date" />

        <TextView
            android:id="@+id/tv_away_team"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="Independiente"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tv_home_team"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/tv_home_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="1"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/tv_away_team_score"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_away_team_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="16dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>